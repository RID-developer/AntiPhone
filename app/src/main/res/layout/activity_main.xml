<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AntiPhone"
            android:textSize="24sp"
            android:textColor="#0D47A1" />

        <View
            android:id="@+id/usageTotal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#0D47A1" />

        <TextView
            android:id="@+id/tvTotalUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Screen Time: 2h 30m"
            android:textColor="#0D47A1"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/usageBlocked"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#1565C0" />

        <TextView
            android:id="@+id/tvBlockedUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blocked Apps Usage: 1h 30m"
            android:textColor="#0D47A1"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/usageNonBlocked"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#1E88E5" />

        <TextView
            android:id="@+id/tvNonBlockedUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-Blocked Apps Usage: 1h"
            android:textColor="#0D47A1"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#1565C0"
        android:onClick="Opt"
        android:text="Options"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/AppBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Block"
        android:backgroundTint="#1565C0"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>
